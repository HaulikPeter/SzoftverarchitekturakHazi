<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuarantineCalorieCalc">

        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.login.LoggedInUserActivity"
            android:exported="false"
            android:label="@string/title_activity_logged_in_user"
            android:theme="@style/Theme.QuarantineCalorieCalc.NoActionBar" />

        <activity
            android:name=".ui.householdselector.HouseHoldSelectorActivity"
            android:exported="false"
            android:label="@string/title_activity_household_selctor"
            android:theme="@style/Theme.QuarantineCalorieCalc.NoActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name=".ui.admindashboard.AdminDashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_admin_dashboard"
            android:theme="@style/Theme.QuarantineCalorieCalc">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ui.residentDashboard.ResidentDashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_admin_dashboard"
            android:theme="@style/Theme.QuarantineCalorieCalc">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity android:name=".ui.residentDashboard.ResidentDashboardActivity"
            android:exported="false"
            android:label="Resident Dashboard"
            android:theme="@style/Theme.QuarantineCalorieCalc.NoActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

    </application>

</manifest>